[colors]
background = ${xrdb:color0}
background-alt = ${xrdb:color8}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color15:#555}
primary = ${xrdb:color4:#ffb52a}
secondary = ${xrdb:color2:#e60053}
alert = ${xrdb:color1:#bd2c40}

[bar/main]
bottom = true

background = ${colors.background}
foreground = ${colors.foreground}

fixed-center = false

font-0 = "FuraMono Nerd Font:style=Regular;1"
font-1 = "FuraMono Nerd Font:style=Bold;1"
font-2 = "FuraMono Nerd Font:style=Regular;1"

tray-position = right
tray-padding = 2
tray-background = ${colors.background}

module-margin-left = 1

padding-left = 1
padding-right = 1

[bar/primary]
inherit = bar/main

width = 100%
height = 22

modules-left = launcher term filemanager
cursor-click = pointer
modules-right = alsa date eth powermenu

[module/filemanager]
type = custom/text

content = "%{T3}ÔÅº %{T-}"
content-foreground = ${colors.primary}
content-background = ${colors.background}
content-padding = 0

click-left = alacritty -e xplr &

[module/term]
type = custom/text

content = "%{T3}ÔÑ† %{T-}"
content-foreground = ${colors.primary}
content-background = ${colors.background}
content-padding = 0

click-left = alacritty &

[module/launcher]
type = custom/text

content = "%{T3}ÔåÉ %{T-}"
content-foreground = "${colors.primary}"
content-background = "${colors.background}"
content-padding = 0

click-left = "$SCRIPTPATH/rofi-applauncher.sh &"

[module/powermenu]
type = custom/text

content = "%{T3}ÔÄë %{T-}"
content-foreground = "${colors.alert}"
content-background = "${colors.background}"
content-padding = 0

click-left = $SCRIPTPATH/rofi-powermenu.sh &

[module/mpd]
type = internal/mpd
format-online = <label-song>  <icon-prev> <icon-stop> <toggle> <icon-next>

icon-prev = ÓÇñ
icon-stop = ÓÇô
icon-play = ÓÇö
icon-pause = ÓÇõ
icon-next = ÓÇú

label-song-maxlen = 25
label-song-ellipsis = true

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "ÓÄ¶ "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = %percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "ÓÄ® "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = %percentage_used%%

[module/eth]
type = internal/network
interface = enp9s0
interval = 3.0

format-connected-prefix = "%{T3}Ôõø%{T-}"
format-connected-prefix-foreground = "${colors.secondary}"
label-connected = " "

format-disconnected-prefix = "%{T3}Ôõø%{T-}"
format-disconnected-prefix-foreground = "${colors.alert}"

[module/date]
type = internal/date
interval = 5

date = "%b %d"
date-alt = "%b %d"

time = "%I:%M"
time-alt = "%I:%M"

format-prefix = "%{T3}ÔÄó %{T-}"
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/pulseaudio]
type = internal/pulseaudio

format-volume = <label-volume> <bar-volume>
label-volume = VOL %percentage%%
label-volume-foreground = ${root.foreground}

label-muted = üîá muted
label-muted-foreground = #666

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/alsa]
type = internal/alsa

format-volume = <label-volume> <bar-volume>
label-volume = VOL
label-volume-foreground = ${root.foreground}

format-muted-prefix = "ÓàÇ "
format-muted-foreground = ${colors.foreground-alt}
label-muted = sound muted

bar-volume-width = 10
bar-volume-foreground-0 = #55aa55
bar-volume-foreground-1 = #55aa55
bar-volume-foreground-2 = #55aa55
bar-volume-foreground-3 = #55aa55
bar-volume-foreground-4 = #55aa55
bar-volume-foreground-5 = #f5a70a
bar-volume-foreground-6 = #ff5555
bar-volume-gradient = false
bar-volume-indicator = |
bar-volume-indicator-font = 2
bar-volume-fill = ‚îÄ
bar-volume-fill-font = 2
bar-volume-empty = ‚îÄ
bar-volume-empty-font = 2
bar-volume-empty-foreground = ${colors.foreground-alt}

[module/temperature]
type = internal/temperature
thermal-zone = 0
warn-temperature = 60

format = <ramp> <label>
format-underline = #f50a4d
format-warn = <ramp> <label-warn>
format-warn-underline = ${self.format-underline}

label = %temperature-c%
label-warn = %temperature-c%
label-warn-foreground = ${colors.secondary}

ramp-0 = ÓÉâ
ramp-1 = ÓÉä
ramp-2 = ÓÉã
ramp-foreground = ${colors.foreground-alt}

[settings]
screenchange-reload = true
;compositing-background = xor
;compositing-background = screen
;compositing-foreground = source
;compositing-border = over
;pseudo-transparency = false

[global/wm]
;margin-top = 5
margin-bottom = 5

; vim:ft=dosini
